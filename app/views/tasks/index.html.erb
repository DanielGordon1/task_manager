<div class="container">
  <h1 class="text-center header-text">Welcome to the Taco task manager ğŸŒ®</h1>
  <div class="row">
    <div class="col-12 col-md-6">
      <h4>Create a new task!</h4>
      <%= simple_form_for @task do |f| %>
        <%= f.input :action %>
        <%= f.submit "Create task", class: "btn btn-primary" %>
      <% end %>
      <hr>
      <h4>Tasks to complete</h4>
      <%= render @uncompleted_tasks %>
    </div>
    <div class="col-12 col-md-6">
      <h4>Completed tasks</h4>
      <%= render @completed_tasks %>
    </div>
  </div>
</div>
